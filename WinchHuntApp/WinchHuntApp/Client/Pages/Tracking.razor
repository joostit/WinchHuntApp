    private void InitMap()
    {
        mapOptions = new MapOptions()
        {
            Zoom = 12,
            Center = new LatLngLiteral()
            {
                Lat = 52.216081,
                Lng = 6.885418,
            },
            MapTypeId = MapTypeId.Roadmap
        };
    }

    private async Task OnAfterMapInit()
    {
        await AddSingleMarker();
    }

    private async Task AddSingleMarker()
    {
        Console.WriteLine("Adding single marker");
        MarkerOptions options = new MarkerOptions()
        {
            Position = new LatLngLiteral(6.876612, 52.270089),
            Map = map.InteropObject,
            Icon = new Icon()
            {
                Url = "/img/currentlocation.png",
                Anchor = new Point()
                {
                    X = 10,
                    Y = 10
                },
                Size = new Size()
                {
                    Width = 40,
                    Height = 40
                },
                ScaledSize = new Size()
                {
                    Width = 20,
                    Height = 20
                }
            }
        };

        currentLocationMarker = await Marker.CreateAsync(map.JsRuntime, options);
        await currentLocationMarker.SetMap(map.InteropObject);


    }



