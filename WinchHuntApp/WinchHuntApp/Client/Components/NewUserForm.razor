<h1>Add User</h1>
<EditForm Model="@model" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-row">
        <div class="form-group col">
            <label>Email address</label>
            <InputText @bind-Value="model.EmailAdress" class="form-control" />
            <ValidationMessage For="@(() => model.EmailAdress)" />
        </div>
    </div>
    <div class="form-group">

        <button class="btn btn-secondary" value="cancel">Cancel</button>

        <button disabled="@loading" class="btn btn-primary">
            @if (loading)
            {
                <span class="spinner-border spinner-border-sm mr-1"></span>
            }
            Save
        </button>

        @*<NavLink href="users" class="btn btn-link">Cancel</NavLink>*@
    </div>
</EditForm>