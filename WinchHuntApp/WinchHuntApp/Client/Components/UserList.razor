<h3>Users</h3>


<div class="container">
    <h3 class="p-3 text-center"></h3>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@DisplayRoles(user.Roles)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

